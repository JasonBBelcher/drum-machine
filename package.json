{
  "name": "drum-machine-v0.1",
  "version": "2.1.0",
  "description": "Web-based drum sequencer with Web Audio API and MVC architecture",
  "type": "module",
  "source": "src/index.html",
  "scripts": {
    "dev": "./node_modules/parcel/bin/cli.js ./src/index.html",
    "start": "./node_modules/http-server/bin/http-server ./dist  --cors='Access-Control-Allow-Origin: *'",
    "start:dev": "./node_modules/parcel/bin/cli.js ./src/index.html",
    "build": "npx parcel build src/index.html --public-url /js/drum-machine/",
    "prod:build": "npx parcel build src/index.html --public-url /js/drum-machine/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:timing": "echo 'Open browser console and run timing test from PHASE1_MIGRATION.md'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "howler": "^2.2.4",
    "http-server": "^0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "parcel": "^2.16.1"
  }
}
